.header.clearfix
  .fl
    %h1
      Zoznam obstarávateľov
  .fr.clearfix
    = render :partial => "lists/buttons"

= render :partial => "reports/slicer"

= render :partial => "link"

%table.data_table
  %tr
    %th= sort_link "Názov", :"obstaravatel.name"
    %th.tr.hodnota= sort_link "Suma", :zmluva_hodnota_sum
    %th.tr Podiel
  - @table.rows.each_index do |row|
    %tr
      %td
        = link_to @table.rows[row][0].formatted_value, report_path("procurer", :cut => "obstaravatel:*-#{@table.rows[row][0].value}")
      %td.tr= @table.formatted_value_at(row, 1)
      %td.tr= @table.formatted_value_at(row, 2)
      
= render :partial => "global/pagination"