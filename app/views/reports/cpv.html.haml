= render :partial => "reports/buttons"

.header
  %h1
    %em CPV:
    = @detail[:"cpv.cpv_division_desc"]
    
= render :partial => "reports/slicer"
= render :partial => "reports/details"

.clearfix
  .left_column.clearfix
    %h2 Obstáravatelia
    = @obstaravatelia_table.as_html
