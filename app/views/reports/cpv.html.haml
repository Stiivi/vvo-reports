  .right_column.clearfix
    %h2 Dodávatelia
    = @dodavatelia_table.as_html
    = link_to "Zobraziť všetko", list_path("supplier", :cut => @slicer.to_param), :class => "button simple"

.clearfix
  .left_column
    = @obstaravatelia_chart.as_html
  .right_column
    = @dodavatelia_chart.as_html

