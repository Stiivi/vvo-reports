!!!
%html
  %head
    %title Procurement reports
    = stylesheet_link_tag "blueprint", "inscription", "application"
    = javascript_include_tag 'jquery.js', 'application.js'
    %script{:src => "http://www.google.com/jsapi", :type => "text/javascript"}
    :javascript
      google.load('visualization', '1', {'packages':['piechart']});
    = csrf_meta_tag

  %body
    #header.clearfix
      %a.header.fl{:href => '/'}
      %ul.fr.links
        = link_to "O projekte", page_path("o-projekte"), :class => "light"
        |
        = link_to "Právne informácie", page_path("pravne-informacie"), :class => "light"
        |
        = link_to "Mapa stránky", page_path("mapa-stranky"), :class => "light"
        |
        = link_to "Kontakt", page_path("kontakt"), :class => "light"
    #container
      #navigation
        %ul.nav.clearfix
          %li
            %a{:href => report_path('default')} Prehľad
          %li
            %a{:href => report_path('all')} Reporty
          %li
            %a{:href => dimension_path('obstaravatel')} Obstarávatelia
          %li
            %a{:href => dimension_path('dodavatel')} Dodávatelia
          %li
            %a{:href => dimension_path('cpv')} Typy tovarov
      #content
        = yield
      #footer
        .tc
          %a{:href => "http://www.transparency.sk"}
            = image_tag "logo_ti.png"
          &nbsp;&nbsp;&nbsp;&nbsp;
          %a{:href => "http://democracyfarm.org"}
            = image_tag "logo_verejne_online.png"
          
