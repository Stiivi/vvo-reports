.header.clearfix
  .fl
    %h1 Informácie o zmluve
  .fr.clearfix
    %a.button{:href => facts_path(:cut => params[:cut])} Späť

.details.status
  %dl.clearfix
    %dt Názov zákazky
    %dd= @fact['zakazka_nazov']
  %dl.clearfix
    %dt Hodnota zmluvy
    %dd= number_to_currency(@fact['zmluva_hodnota'])
  %dl.clearfix
    %dt Počet zmlúv vrámci zákazky:
    %dd= @fact['pocet_zmluv']
  %dl.clearfix
    %dt Celková hodnota zákazky:
    %dd= number_to_currency(@fact['zakazka_hodnota'])
  %dl.clearfix
    %dt Podiel tejto zmluvy
    %dd= number_to_percentage(@fact['zmluva_hodnota']/@fact['zakazka_hodnota']*100, :precision => 1)

.details

  %h2 Oznamenie
  %p Číslo vestníka: #{@fact['vestnik_cislo']}

  - link_m = link_to_cut('date', @fact['date.month_name'], [@fact['date.year'], @fact['date.month']])
  - link_y = link_to_cut('date', @fact['date.year'], [@fact['date.year']])
  %p Dátum oznámenia: #{@fact['date.day']}. #{link_m} #{link_y} 


  - link = link_to_cut('druh_postupu', @fact['druh_postupu.druh_postupu'], [@fact['druh_postupu.id']])
  %p Druh postupu: #{link}

  - link = link_to_cut('kriteria_vyhodnotenia', @fact['kriteria_vyhodnotenia.kriteria_vyhodnotenia'], [@fact['kriteria_vyhodnotenia.id']])
  %p Kriteria vyhodnotenia: #{link}

  - link = link_to_cut('cpv', @fact['cpv.description'], [@fact['cpv.cpv_code']])
  %p Predmet obstarávania (CPV): #{link}

  %h2 Dodávateľ
  - link = link_to_cut('dodavatel', @fact['dodavatel.name'], [@fact['dodavatel.ico']])
  %h3 #{link} #{image_tag("icons/zoom.png", :alt => "Explore")}
  %p IČO: #{@fact['dodavatel.ico']}
  %p Adresa: #{@fact['dodavatel.address']}
  - link = link_to_cut('dodavatel', @fact['dodavatel.region'], [@fact['dodavatel.region']])
  %p Region: #{link}
  %p Krajina: #{@fact['dodavatel.country']}
  %p Dátum vzniku: #{@fact['dodavatel.date_start']}
  - datum_oznamenia = @fact['vestnik_datum']
  - datum_vzniku = @fact['dodavatel.date_start']
  %p Spoločnosť vznikla pred #{distance_of_time_in_words(datum_vzniku, datum_oznamenia)} od dátumu zveréjnenia.

  %h2 Obstarávateľ
  - link = link_to_cut('obstaravatel', @fact['obstaravatel.name'], [@fact['obstaravatel.ico']])
  %h3 #{link} #{image_tag("icons/zoom.png", :alt => "Explore")}
  %p Adresa: #{@fact['obstaravatel.address']}
  - link = link_to_cut('obstaravatel', @fact['obstaravatel.account_sector'], [@fact['obstaravatel.account_sector_code']])
  %p Sektor: #{link}

